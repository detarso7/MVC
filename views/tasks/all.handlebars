<h1>Todas as Tarefas</h1>

<ul class="task-list">
{{#each tasks}}

    <li>
        
            {{#if this.done}}
                <a href="/" class="title done">{{this.title}}</a>
            {{else}}
                <a href="/" class="title">{{this.title}}</a>
            {{/if}}

        <div class="actions">

            {{#if this.done}}
                <form action="/tasks/updatestatus" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <button type="submit" > <p>Desfazer</p> </button>
                </form>
            {{else}}
                <form action="/tasks/updatestatus" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <button type="submit" ><i class="bi bi-check2"></i></button>
                </form>
            {{/if}}

                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

                <form action="/tasks/remove" method="POST">
                    <input type="hidden"  name="id" value="{{this.id}}">
                    <button type="submit"><i class="bi bi-x-lg"></i></button>
                </form>
        </div>
        
    </li> 

            {{#if this.done}}

            {{else}}
                <div class="description">
                    <h5>{{this.description}}</h5>
                </div>
            {{/if}}
    
{{/each}}
</ul>